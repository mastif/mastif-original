<?xml version="1.0" encoding="UTF-8"?>
<m:configuration  xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
   xmlns:m='http://www.mitre.org/medfacts'
   xsi:schemaLocation='http://www.mitre.org/medfacts rules_schema.xsd'>
    <m:class m:id="patient_ref">
        <!--<m:class-name>patient_ref</m:class-name>-->
        <m:class-value>the patient</m:class-value>
        <m:class-value>him</m:class-value>
        <m:class-value>her</m:class-value>
        <m:class-value />
    </m:class>
    <m:class m:id="direction_ref">
        <!--<m:class-name>direction_ref</m:class-name>-->
        <m:class-value>for</m:class-value>
        <m:class-value>against</m:class-value>
        <m:class-value />
    </m:class>
    <m:rule tag="negation" direction="pre">rules <m:class-ref idref="patient_ref"/> out</m:rule>
